{% extends 'base.html.twig' %}

{% block title %}CITC - {{ 'app.profile.title'|trans }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Flash Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 p-4 rounded-lg {% if type == 'success' %}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200{% elseif type == 'error' %}bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200{% else %}bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{{ 'app.profile.title'|trans }}</h1>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">{{ 'app.profile.subtitle'|trans({ '%name%': app.user.prenom ~ ' ' ~ app.user.nom }) }}</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sidebar - Informations principales -->
            <div class="lg:col-span-1">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
                    <!-- Avatar et nom -->
                    <div class="p-6 text-center border-b border-gray-200 dark:border-gray-700">
                        <div class="mx-auto h-32 w-32 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white text-5xl font-bold mb-4">
                            {{ app.user.prenom|first|upper }}{{ app.user.nom|first|upper }}
                        </div>
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">{{ app.user.prenom }} {{ app.user.nom }}</h2>
                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{{ app.user.email }}</p>
                        {% if partenaire %}
                        <span class="inline-flex items-center px-3 py-1 mt-3 rounded-full text-sm font-medium bg-primary-100 text-primary-800 dark:bg-primary-900 dark:text-primary-200">
                            <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
                            </svg>
                            {{ partenaire.nom }}
                        </span>
                        {% endif %}
                    </div>

                    <!-- Informations -->
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{{ 'app.profile.information'|trans }}</h3>
                        <dl class="space-y-4">
                            <div>
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'app.common.username'|trans }}</dt>
                                <dd class="mt-1 text-sm text-gray-900 dark:text-white">{{ app.user.username }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'app.common.email'|trans }}</dt>
                                <dd class="mt-1 text-sm text-gray-900 dark:text-white">{{ app.user.email }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'app.common.role'|trans }}</dt>
                                <dd class="mt-1">
                                    {% for role in app.user.roles %}
                                        {% if role == 'ROLE_ADMINISTRATEUR' %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 mr-1">
                                                {{ 'app.common.administrator'|trans }}
                                            </span>
                                        {% elseif role == 'ROLE_ADMINISTRATION' %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 mr-1">
                                                {{ 'app.common.administration'|trans }}
                                            </span>
                                        {% elseif role == 'ROLE_USER' %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 mr-1">
                                                {{ 'app.common.user_role'|trans }}
                                            </span>
                                        {% endif %}
                                    {% endfor %}
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Contenu principal -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Modifier les informations -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{{ 'app.profile.edit_information'|trans }}</h3>
                    </div>

                    <form method="post" action="{{ path('app_profile_update') }}" class="space-y-6">
                        <input type="hidden" name="_token" value="{{ csrf_token('profile_update') }}">
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label for="prenom" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    {{ 'app.common.first_name'|trans }}
                                </label>
                                <input type="text" id="prenom" name="prenom" value="{{ app.user.prenom }}" 
                                    class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            </div>
                            
                            <div>
                                <label for="nom" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    {{ 'app.common.last_name'|trans }}
                                </label>
                                <input type="text" id="nom" name="nom" value="{{ app.user.nom }}" 
                                    class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            </div>
                        </div>

                        <div>
                            <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                {{ 'app.common.username'|trans }}
                            </label>
                            <input type="text" id="username" name="username" value="{{ app.user.username }}" disabled
                                class="block w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 dark:bg-gray-700 dark:border-gray-600 text-gray-500 dark:text-gray-400 cursor-not-allowed">
                            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">{{ 'app.profile.username_cannot_change'|trans }}</p>
                        </div>

                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                {{ 'app.common.email'|trans }}
                            </label>
                            <input type="email" id="email" name="email" value="{{ app.user.email }}" 
                                class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        </div>

                        <div class="flex justify-end">
                            <button type="submit" class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                {{ 'app.common.save_changes'|trans }}
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Changer le mot de passe -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <div class="flex items-center justify-between mb-6">
                        <div>
                            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{{ 'app.profile.change_password'|trans }}</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{{ 'app.profile.password_security'|trans }}</p>
                        </div>
                    </div>

                    <form method="post" action="{{ path('app_profile_change_password') }}" class="space-y-6">
                        <input type="hidden" name="_token" value="{{ csrf_token('change_password') }}">
                        
                        <div>
                            <label for="current_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                {{ 'app.profile.current_password'|trans }}
                            </label>
                            <input type="password" id="current_password" name="current_password" 
                                class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                required>
                        </div>

                        <div>
                            <label for="new_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                {{ 'app.profile.new_password'|trans }}
                            </label>
                            <input type="password" id="new_password" name="new_password" 
                                class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                required>
                        </div>

                        <div>
                            <label for="confirm_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                {{ 'app.profile.confirm_password'|trans }}
                            </label>
                            <input type="password" id="confirm_password" name="confirm_password" 
                                class="block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                required>
                        </div>

                        <div class="flex justify-end">
                            <button type="submit" class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                                {{ 'app.profile.update_password'|trans }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
