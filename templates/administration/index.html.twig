    {{ parent() }}
    <script>
        // Fonction pour toggle les dropdowns (remplace Flowbite pour les éléments dans turbo-frame)
        function toggleDropdown(event, dropdownId) {
            event.stopPropagation();
            const dropdown = document.getElementById(dropdownId);
            
            // Fermer tous les autres dropdowns
            document.querySelectorAll('[id^="dropdown-"]').forEach(d => {
                if (d.id !== dropdownId && d.id !== 'filterDropdown') {
                    d.classList.add('hidden');
                }
            });
            
            // Fermer le filtre dropdown aussi
            const filterDropdown = document.getElementById('filterDropdown');
            if (filterDropdown) filterDropdown.classList.add('hidden');
            
            // Toggle le dropdown actuel
            dropdown.classList.toggle('hidden');
        }
        
        // Fonction pour toggle le dropdown des filtres
        function toggleFilterDropdown(event) {
            event.preventDefault();
            event.stopPropagation();
            const filterDropdown = document.getElementById('filterDropdown');
            
            // Fermer les autres dropdowns
            document.querySelectorAll('[id^="dropdown-"]').forEach(d => {
                if (d.id !== 'filterDropdown') {
                    d.classList.add('hidden');
                }
            });
            
            // Toggle le dropdown des filtres
            filterDropdown.classList.toggle('hidden');
        }
        
        // Fonction pour ouvrir un drawer
        function openDrawer(drawerId) {
            const drawer = document.getElementById(drawerId);
            if (drawer) {
                drawer.classList.remove('-translate-x-full');
                drawer.removeAttribute('inert');
                drawer.removeAttribute('aria-hidden');
                // Ajouter backdrop
                const backdrop = document.createElement('div');
                backdrop.className = 'bg-gray-900 bg-opacity-50 fixed inset-0 z-30';
                backdrop.id = 'drawer-backdrop';
                backdrop.onclick = () => closeDrawer(drawerId);
                document.body.appendChild(backdrop);
                // Fermer le dropdown
                document.querySelectorAll('[id^="dropdown-"]').forEach(d => d.classList.add('hidden'));
            }
        }
        
        // Fonction pour fermer un drawer
        function closeDrawer(drawerId) {
            const drawer = document.getElementById(drawerId);
            if (drawer) {
                drawer.classList.add('-translate-x-full');
                drawer.setAttribute('inert', '');
                drawer.setAttribute('aria-hidden', 'true');
                const backdrop = document.getElementById('drawer-backdrop');
                if (backdrop) backdrop.remove();
                // Fermer aussi les WP slide panels associés
                document.querySelectorAll('.wp-slide-panel').forEach(panel => {
                    panel.classList.add('translate-x-full');
                });
                const wpBackdrop = document.getElementById('wp-slide-backdrop');
                if (wpBackdrop) wpBackdrop.remove();
            }
        }
        
        // Fonction pour ouvrir un WP slide panel
        function openWpSlide(slideId) {
            const slide = document.getElementById(slideId);
            if (slide) {
                slide.classList.remove('translate-x-full');
                slide.classList.add('translate-x-0');
                // Ajouter backdrop si pas déjà présent
                if (!document.getElementById('wp-slide-backdrop')) {
                    const backdrop = document.createElement('div');
                    backdrop.className = 'bg-gray-900 bg-opacity-50 fixed inset-0 z-45';
                    backdrop.id = 'wp-slide-backdrop';
                    backdrop.onclick = () => closeWpSlide(slideId);
                    document.body.appendChild(backdrop);
                }
            }
        }
        
        // Fonction pour fermer un WP slide panel
        function closeWpSlide(slideId) {
            const slide = document.getElementById(slideId);
            if (slide) {
                slide.classList.add('translate-x-full');
                slide.classList.remove('translate-x-0');
                const backdrop = document.getElementById('wp-slide-backdrop');
                if (backdrop) backdrop.remove();
            }
        }
        
        // Fonction pour ouvrir une modal
        function openModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.remove('hidden');
                modal.classList.add('flex');
                modal.removeAttribute('inert');
                modal.removeAttribute('aria-hidden');
                // Ajouter backdrop
                const backdrop = document.createElement('div');
                backdrop.className = 'bg-gray-900 bg-opacity-50 fixed inset-0 z-40';
                backdrop.id = 'modal-backdrop-' + modalId;
                backdrop.onclick = () => closeModal(modalId);
                document.body.appendChild(backdrop);
                // Fermer le dropdown
                document.querySelectorAll('[id^="dropdown-"]').forEach(d => d.classList.add('hidden'));
            }
        }
        
        // Fonction pour fermer une modal
        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
                modal.setAttribute('inert', '');
                modal.setAttribute('aria-hidden', 'true');
                const backdrop = document.getElementById('modal-backdrop-' + modalId);
                if (backdrop) backdrop.remove();
            }
        }
        
        // Fermer les dropdowns en cliquant ailleurs
        document.addEventListener('click', function(event) {
            // Fermer les dropdowns des actions (trois points)
            if (!event.target.closest('[id^="dropdown-"]') && !event.target.closest('button[onclick^="toggleDropdown"]')) {
                document.querySelectorAll('[id^="dropdown-"]').forEach(d => {
                    d.classList.add('hidden');
                });
            }
            
            // Fermer le dropdown des filtres
            const filterDropdown = document.getElementById('filterDropdown');
            const filterButton = document.getElementById('filterDropdownButton');
            if (filterDropdown && !filterDropdown.contains(event.target) && !filterButton.contains(event.target)) {
                filterDropdown.classList.add('hidden');
            }
        });
        
        // Gestion des filtres (rechargement de page avec paramètres GET)
        document.addEventListener('DOMContentLoaded', function() {
            const filterInputs = document.querySelectorAll('[data-filter-input]');
            
            filterInputs.forEach(input => {
                input.addEventListener('change', function() {
                    applyFilters();
                });
            });
        });
        
        // Fonction pour appliquer les filtres via URL
        function applyFilters() {
            const params = new URLSearchParams();
            
            // Récupérer les WP cochés
            const wpChecked = document.querySelectorAll('input[name="wp[]"][data-filter-input]:checked');
            wpChecked.forEach(cb => {
                params.append('wp[]', cb.value);
            });
            
            // Récupérer les années cochées
            const yearChecked = document.querySelectorAll('input[name="year[]"][data-filter-input]:checked');
            yearChecked.forEach(cb => {
                params.append('year[]', cb.value);
            });
            
            // Récupérer le partenaire sélectionné
            const partnerSelect = document.getElementById('filter_partner');
            if (partnerSelect && partnerSelect.value) {
                params.append('partner', partnerSelect.value);
            }
            
            // Recharger la page avec les filtres
            const queryString = params.toString();
            window.location.href = window.location.pathname + (queryString ? '?' + queryString : '');
        }
    </script>
