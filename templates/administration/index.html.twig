{% extends 'base.html.twig' %}

{% block title %}CITC - {{ 'app.administration.dashboard_title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/administrateur/dashboard.css') }}">
{% endblock %}

{% block body %}
<div class="admin-filter-bar">
    <div class="admin-search-container">
        <input type="text" class="admin-search-input" placeholder="{{ 'app.administration.search_placeholder'|trans }}">
        <svg class="admin-search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
        </svg>
    </div>
    
    <div class="admin-select-container">
        <select class="admin-select" id="admin-filter1">
            <option value="">{{ 'app.administration.work_package'|trans }}</option>
            <option value="wp2">WP2</option>
            <option value="wp4">WP4</option>
            <option value="wp5">WP5</option>
            <option value="wp6">WP6</option>
            <option value="wp7">WP7</option>
        </select>
    </div>
    
    <div class="admin-select-container">
        <select class="admin-select" id="admin-filter2">
            <option value="">{{ 'app.administration.year'|trans }}</option>

            {% for i in 0..5 %}
                <option value="{{ currentYear - i }}">{{ currentYear - i }}</option>
            {% endfor %}
        </select>
    </div>

        <div class="admin-select-container">
        <select class="admin-select" id="admin-filter3">
            <option value="">{{ 'app.administration.partners'|trans }}</option>
            {% if partenaires is defined %}
                {% for partenaire in partenaires %}
                    <option value="{{ partenaire }}">{{ partenaire }}</option>
                {% endfor %}
            {% endif %}
        </select>
    </div>
    
    <a href="{{ path('app_administration_statistics') }}" class="admin-stats-btn">
        <svg class="stats-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="20" x2="12" y2="10"></line>
            <line x1="18" y1="20" x2="18" y2="4"></line>
            <line x1="6" y1="20" x2="6" y2="16"></line>
        </svg>
        {{ 'app.administration.statistics'|trans }}
    </a>
    
    <a href="{{ path('app_administration_create_entreprise') }}" class="admin-stats-btn">
        <svg class="stats-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        {{ 'app.administration.create_company'|trans }}
    </a>
</div>

<div class="admin-main-layout">
    <div class="admin-main-content">

    </div>
    
    <div class="admin-sidebar-info">
        <h3 class="sidebar-title">{{ 'app.administration.company'|trans }}</h3>
        <div class="sidebar-separator"></div>
        <div class="sidebar-list-container">
            {% if partenaires is defined and partenaires is not empty %}
                <ul class="partenaire-list">
                    {% for partenaire in partenaires %}
                        <li class="partenaire-item">{{ partenaire }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="no-data">{{ 'app.administration.no_company'|trans }}</p>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
