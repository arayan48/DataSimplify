{% extends 'base.html.twig' %}

{% block title %}CITC - {{ 'app.administration.dashboard_title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Animation pour les dropdowns */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .animate-fadeIn {
            animation: fadeIn 0.15s ease-out;
        }
        
        /* S'assurer que le conteneur du tableau gère bien l'overflow */
        .entreprises-section table td {
            position: relative;
        }
        
        /* Ajustements des couleurs pour correspondre au thème du site */
        .bg-primary-700 {
            background-color: #00c3c6 !important;
        }
        
        .bg-primary-600 {
            background-color: #00c3c6 !important;
        }
        
        .hover\:bg-primary-800:hover {
            background-color: #00a8ab !important;
        }
        
        .hover\:bg-primary-700:hover {
            background-color: #00a8ab !important;
        }
        
        .focus\:ring-primary-300:focus {
            --tw-ring-color: rgba(0, 195, 198, 0.3) !important;
        }
        
        .dark\:focus\:ring-primary-800:focus {
            --tw-ring-color: rgba(0, 168, 171, 0.3) !important;
        }
        
        .hover\:text-primary-700:hover {
            color: #00a8ab !important;
        }
        
        .text-primary-600 {
            color: #00c3c6 !important;
        }
        
        .bg-primary-50 {
            background-color: rgba(0, 195, 198, 0.1) !important;
        }
        
        .border-primary-300 {
            border-color: rgba(0, 195, 198, 0.3) !important;
        }
        
        .hover\:bg-primary-100:hover {
            background-color: rgba(0, 195, 198, 0.15) !important;
        }
        
        .focus\:ring-primary-500:focus {
            --tw-ring-color: rgba(0, 195, 198, 0.5) !important;
        }
        
        .focus\:border-primary-500:focus {
            border-color: #00c3c6 !important;
        }
        
        .dark\:focus\:ring-primary-600:focus {
            --tw-ring-color: rgba(0, 195, 198, 0.6) !important;
        }
        
        /* Style pour les dropdowns */
        [id^="dropdown-"] {
            border: 1px solid #e9ecef;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }
        
        /* Style du bouton avec les trois points */
        button[id^="dropdown-button-"] {
            border-radius: 50%;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
        }
        
        button[id^="dropdown-button-"]:hover {
            background-color: #f3f4f6;
        }
    </style>
    <script>
        if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark')
        }
    </script>
{% endblock %}

{% block body %}

<section class="bg-white p-3 sm:p-5">
    <div class="mx-auto max-w-screen-xl px-4 lg:px-12">
        <!-- Start coding here -->
        <div class="bg-white relative shadow-md sm:rounded-lg overflow-hidden" style="border: 1px solid #e9ecef;">
            <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-4">
                <div class="w-full md:w-1/2">
                    <form class="flex items-center">
                        <label for="simple-search" class="sr-only">{{ 'app.common.search'|trans }}</label>
                        <div class="relative w-full">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <input type="text" id="simple-search" class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 p-2" placeholder="{{ 'app.common.search_placeholder'|trans }}" required="">
                        </div>
                    </form>
                </div>
                <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end md:space-x-3 flex-shrink-0">
                    <a href="{{ path('app_administration_create_entreprise') }}" class="flex items-center justify-center text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2 focus:outline-none">
                        <svg class="h-3.5 w-3.5 mr-2" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                            <path clip-rule="evenodd" fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" />
                        </svg>
                        {{ 'app.administration.create_company'|trans }}
                    </a>
                    <div class="flex items-center space-x-3 w-full md:w-auto">
                        <form data-turbo="false" class="inline-block relative">
                            <button id="filterDropdownButton" onclick="toggleFilterDropdown(event)" class="w-full md:w-auto flex items-center justify-center py-2 px-4 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200" type="button">
                                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="h-4 w-4 mr-2 text-gray-400" viewbox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
                                </svg>
                                {{ 'app.common.filter'|trans }}
                                <svg class="-mr-1 ml-1.5 w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                    <path clip-rule="evenodd" fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" />
                                </svg>
                            </button>
                            <div id="filterDropdown" class="z-50 hidden w-80 p-4 bg-white rounded-lg shadow-lg max-h-96 overflow-y-auto" style="border: 1px solid #e9ecef; position: absolute; top: 100%; right: 0; margin-top: 4px;">
                                <h6 class="mb-3 text-sm font-medium text-gray-900 border-b pb-2">{{ 'app.administration.filters'|trans }}</h6>
                                
                                <!-- Filtre Work Package -->
                                <div class="mb-4">
                                    <h6 class="mb-2 text-xs font-semibold text-gray-700 uppercase">{{ 'app.administration.work_package'|trans }}</h6>
                                    <ul class="space-y-2 text-sm">
                                        <li class="flex items-center">
                                            <input id="filter_wp2" name="wp[]" type="checkbox" value="wp2" class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-primary-600 focus:ring-primary-500 focus:ring-2" data-filter-input>
                                            <label for="filter_wp2" class="ml-2 text-sm font-medium text-gray-900">WP2</label>
                                        </li>
                                        <li class="flex items-center">
                                            <input id="filter_wp5_event" name="wp[]" type="checkbox" value="wp5_event" class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-primary-600 focus:ring-primary-500 focus:ring-2" data-filter-input>
                                            <label for="filter_wp5_event" class="ml-2 text-sm font-medium text-gray-900">WP5 - Event</label>
                                        </li>
                                        <li class="flex items-center">
                                            <input id="filter_wp5_formation" name="wp[]" type="checkbox" value="wp5_formation" class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-primary-600 focus:ring-primary-500 focus:ring-2" data-filter-input>
                                            <label for="filter_wp5_formation" class="ml-2 text-sm font-medium text-gray-900">WP5 - Formation</label>
                                        </li>
                                        <li class="flex items-center">
                                            <input id="filter_wp6" name="wp[]" type="checkbox" value="wp6" class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-primary-600 focus:ring-primary-500 focus:ring-2" data-filter-input>
                                            <label for="filter_wp6" class="ml-2 text-sm font-medium text-gray-900">WP6</label>
                                        </li>
                                        <li class="flex items-center">
                                            <input id="filter_wp7" name="wp[]" type="checkbox" value="wp7" class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-primary-600 focus:ring-primary-500 focus:ring-2" data-filter-input>
                                            <label for="filter_wp7" class="ml-2 text-sm font-medium text-gray-900">WP7</label>
                                        </li>
                                        <li class="flex items-center">
                                            <input id="filter_mise_en_relation" name="wp[]" type="checkbox" value="mise_en_relation" class="w-4 h-4 bg-gray-100 border-gray-300 rounded text-primary-600 focus:ring-primary-500 focus:ring-2" data-filter-input>
                                            <label for="filter_mise_en_relation" class="ml-2 text-sm font-medium text-gray-900">{{ 'app.administration.networking'|trans }}</label>
                                        </li>
                                    </ul>
                                </div>
                                
                                <!-- Filtre Année -->
                                <div class="mb-4">
                                    <h6 class="mb-2 text-xs font-semibold text-gray-700 uppercase">{{ 'app.administration.year'|trans }}</h6>
                                    <select id="filter_year" name="year" class="w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 p-2" data-filter-input>
                                        <option value="">{{ 'app.administration.all_years'|trans }}</option>
                                        {% for year in range(2020, 'now'|date('Y')) %}
                                        <option value="{{ year }}">{{ year }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                
                                <!-- Filtre Partenaire -->
                                {% if app.user and 'ROLE_ADMINISTRATEUR' in app.user.roles %}
                                <div class="mb-4">
                                    <h6 class="mb-2 text-xs font-semibold text-gray-700 uppercase">{{ 'app.administration.partners'|trans }}</h6>
                                    <select id="filter_partner" name="partner" class="w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 p-2" data-filter-input>
                                        <option value="">{{ 'app.common.all_partners'|trans }}</option>
                                        {% for partenaire in partenaires %}
                                        <option value="{{ partenaire.id }}">{{ partenaire.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                {% endif %}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <turbo-frame id="entreprises-table">
            <div class="overflow-x-auto" style="min-height: 500px;">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase" style="background-color: #f8f9fa;">
                        <tr>
                            <th scope="col" class="px-4 py-3">{{ 'app.administration.table.company_name'|trans }}</th>
                            <th scope="col" class="px-4 py-3">{{ 'app.administration.table.sector'|trans }}</th>
                            <th scope="col" class="px-4 py-3">{{ 'app.administration.table.city'|trans }}</th>
                            <th scope="col" class="px-4 py-3">{{ 'app.administration.table.size'|trans }}</th>
                            <th scope="col" class="px-4 py-3">{{ 'app.administration.work_packages'|trans }}</th>
                            <th scope="col" class="px-4 py-3">{{ 'app.administration.table.year'|trans }}</th>
                            <th scope="col" class="px-4 py-3">
                                <span class="sr-only">{{ 'app.administration.actions'|trans }}</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if entreprises is empty %}
                        <!-- Lignes vides pour maintenir la hauteur du tableau -->
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3">&nbsp;</td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3">&nbsp;</td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3">&nbsp;</td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3 text-center text-gray-500">
                                {{ 'app.administration.no_data'|trans }}
                            </td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3">&nbsp;</td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3">&nbsp;</td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3">&nbsp;</td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3">&nbsp;</td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3">&nbsp;</td>
                        </tr>
                        <tr class="border-b border-gray-200">
                            <td colspan="7" class="px-4 py-3">&nbsp;</td>
                        </tr>
                        {% else %}
                        {% for entreprise in entreprises %}
                        <tr class="border-b border-gray-200">
                            <th scope="row" class="px-4 py-3 font-medium text-gray-900 whitespace-nowrap">
                                <div class="flex items-center gap-2">
                                    {{ entreprise.nom }}
                                    {% set hasWp = entreprise.wp2 is not null or entreprise.wp5Events is not empty or entreprise.wp5Formations is not empty or entreprise.wp6 is not empty or entreprise.wp7 is not empty or entreprise.miseEnRelations is not empty %}
                                    {% if entreprise.statut == 'rouge' and hasWp %}
                                        <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                        </svg>
                                    {% elseif entreprise.statut == 'orange' and hasWp %}
                                        <svg class="w-5 h-5 text-orange-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                        </svg>
                                    {% endif %}
                                </div>
                            </th>
                            <td class="px-4 py-3">{{ entreprise.secteur }}</td>
                            <td class="px-4 py-3">{{ entreprise.ville }}</td>
                            <td class="px-4 py-3">{{ entreprise.taille }}</td>
                            <td class="px-4 py-3">
                                <div class="flex flex-wrap gap-1">
                                    {% set bgColor = entreprise.statut == 'vert' ? 'bg-green-100' : (entreprise.statut == 'orange' ? 'bg-orange-100' : (entreprise.statut == 'rouge' ? 'bg-red-100' : 'bg-gray-100')) %}
                                    {% set textColor = entreprise.statut == 'vert' ? 'text-green-800' : (entreprise.statut == 'orange' ? 'text-orange-800' : (entreprise.statut == 'rouge' ? 'text-red-800' : 'text-gray-800')) %}
                                    {% if entreprise.wp2 is not null %}
                                        <span class="group relative cursor-pointer px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors">
                                            WP2
                                            <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-50 pointer-events-none">
                                                <strong>DMAO Score:</strong> {{ entreprise.wp2.scoreDmao|default('N/A') }}<br>
                                                <strong>DMA1:</strong> {{ entreprise.wp2.scoreDma1|default('N/A') }}
                                                <span class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-900"></span>
                                            </span>
                                        </span>
                                    {% endif %}
                                    {% if entreprise.wp5Events is not empty %}
                                        <span class="group relative cursor-pointer px-2 py-1 text-xs font-medium rounded-full bg-amber-100 text-amber-800 hover:bg-amber-200 transition-colors">
                                            WP5-E
                                            <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-50 pointer-events-none">
                                                <strong>{{ entreprise.wp5Events|length }} événement(s)</strong><br>
                                                {% for event in entreprise.wp5Events|slice(0, 2) %}
                                                • {{ event.eventNameEnglish|slice(0, 25) }}{% if event.eventNameEnglish|length > 25 %}...{% endif %}<br>
                                                {% endfor %}
                                                {% if entreprise.wp5Events|length > 2 %}+ {{ entreprise.wp5Events|length - 2 }} autre(s){% endif %}
                                                <span class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-900"></span>
                                            </span>
                                        </span>
                                    {% endif %}
                                    {% if entreprise.wp5Formations is not empty %}
                                        <span class="group relative cursor-pointer px-2 py-1 text-xs font-medium rounded-full bg-orange-100 text-orange-800 hover:bg-orange-200 transition-colors">
                                            WP5-F
                                            <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-50 pointer-events-none">
                                                <strong>{{ entreprise.wp5Formations|length }} formation(s)</strong><br>
                                                {% for formation in entreprise.wp5Formations|slice(0, 2) %}
                                                • {{ formation.technology|slice(0, 25) }}{% if formation.technology|length > 25 %}...{% endif %}<br>
                                                {% endfor %}
                                                {% if entreprise.wp5Formations|length > 2 %}+ {{ entreprise.wp5Formations|length - 2 }} autre(s){% endif %}
                                                <span class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-900"></span>
                                            </span>
                                        </span>
                                    {% endif %}
                                    {% if entreprise.wp6 is not empty %}
                                        <span class="group relative cursor-pointer px-2 py-1 text-xs font-medium rounded-full bg-emerald-100 text-emerald-800 hover:bg-emerald-200 transition-colors">
                                            WP6
                                            <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-50 pointer-events-none">
                                                <strong>{{ entreprise.wp6|length }} projet(s)</strong><br>
                                                {% for project in entreprise.wp6|slice(0, 2) %}
                                                • {{ project.technology|slice(0, 25) }}{% if project.technology|length > 25 %}...{% endif %}<br>
                                                {% endfor %}
                                                {% if entreprise.wp6|length > 2 %}+ {{ entreprise.wp6|length - 2 }} autre(s){% endif %}
                                                <span class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-900"></span>
                                            </span>
                                        </span>
                                    {% endif %}
                                    {% if entreprise.wp7 is not empty %}
                                        <span class="group relative cursor-pointer px-2 py-1 text-xs font-medium rounded-full bg-pink-100 text-pink-800 hover:bg-pink-200 transition-colors">
                                            WP7
                                            <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-50 pointer-events-none">
                                                <strong>{{ entreprise.wp7|length }} investissement(s)</strong><br>
                                                {% for invest in entreprise.wp7|slice(0, 2) %}
                                                • {{ invest.typeInvestment|slice(0, 25) }}{% if invest.typeInvestment|length > 25 %}...{% endif %}<br>
                                                {% endfor %}
                                                {% if entreprise.wp7|length > 2 %}+ {{ entreprise.wp7|length - 2 }} autre(s){% endif %}
                                                <span class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-900"></span>
                                            </span>
                                        </span>
                                    {% endif %}
                                    {% if entreprise.miseEnRelations is not empty %}
                                        <span class="group relative cursor-pointer px-2 py-1 text-xs font-medium rounded-full bg-indigo-100 text-indigo-800 hover:bg-indigo-200 transition-colors">
                                            MER
                                            <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-50 pointer-events-none">
                                                <strong>{{ entreprise.miseEnRelations|length }} relation(s)</strong><br>
                                                {% for relation in entreprise.miseEnRelations|slice(0, 2) %}
                                                • {{ relation.technology|slice(0, 25) }}{% if relation.technology|length > 25 %}...{% endif %}<br>
                                                {% endfor %}
                                                {% if entreprise.miseEnRelations|length > 2 %}+ {{ entreprise.miseEnRelations|length - 2 }} autre(s){% endif %}
                                                <span class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-900"></span>
                                            </span>
                                        </span>
                                    {% endif %}
                                </div>
                            </td>
                            <td class="px-4 py-3">{{ entreprise.anneeCreation }}</td>
                            <td class="px-4 py-3 flex items-center justify-end relative">
                                <button onclick="toggleDropdown(event, 'dropdown-{{ entreprise.id }}')" class="inline-flex items-center p-0.5 text-sm font-medium text-center text-gray-500 hover:text-gray-800 rounded-lg focus:outline-none" type="button">
                                    <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
                                    </svg>
                                </button>
                                <div id="dropdown-{{ entreprise.id }}" class="hidden absolute right-0 top-8 z-50 w-56 bg-white rounded-lg shadow-xl border border-gray-200">
                                    <ul class="py-2">
                                        <li>
