{% extends 'base.html.twig' %}

{% block title %}CITC - {{ 'app.create_entreprise.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/administrateur/create_entreprise.css') }}">
    <!-- Flaticon CDN -->
    <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/uicons-regular-straight/css/uicons-regular-straight.css">
{% endblock %}

{% block body %}
<div class="create-entreprise-container" data-controller="create-entreprise">
    <div class="create-entreprise-top">
        <button type="button" class="btn-back" onclick="window.history.back()">
            <i class="fi fi-rs-arrow-left"></i>
            {{ 'app.common.back'|trans }}
        </button>
    </div>

    <div class="create-entreprise-header">
        <h1>{{ 'app.create_entreprise.title'|trans }}</h1>
        <p>{{ 'app.create_entreprise.description'|trans }}</p>
    </div>

    <form method="POST" class="create-entreprise-form">
        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                <i class="fi fi-rs-exclamation"></i>
                {{ message }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="fi fi-rs-check"></i>
                {{ message }}
            </div>
        {% endfor %}
        
        <div class="accordion-container">
            <!-- Section 1: Information Entreprise -->
            <div class="accordion-item">
                <div class="accordion-header active">
                    <h3>
                        <i class="fi fi-rs-document"></i>
                        {{ 'app.create_entreprise.section_info'|trans }}
                    </h3>
                    <span class="accordion-icon">
                        <i class="fi fi-rs-angle-down"></i>
                    </span>
                </div>
                <div class="accordion-content active">
                    <div class="accordion-body">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="nom">{{ 'app.create_entreprise.company_name'|trans }} <span class="required">*</span></label>
                                <input type="text" id="nom" name="nom" required>
                            </div>
                            {% if app.user and 'ROLE_ADMINISTRATEUR' in app.user.roles %}
                            <div class="form-group">
                                <label for="partenaire_id">{{ 'app.create_entreprise.assign_partner'|trans }}</label>
                                <select id="partenaire_id" name="partenaire_id">
                                    <option value="">{{ 'app.create_entreprise.use_my_partner'|trans }}</option>
                                    {% for partenaire in partenaires %}
                                        <option value="{{ partenaire.id }}">{{ partenaire.nom }}</option>
                                    {% endfor %}
                                </select>
                                <small class="form-help">Laissez vide pour utiliser votre partenaire</small>
                            </div>
                            {% else %}
                            <div class="form-group">
                                <label for="annee_edih">{{ 'app.create_entreprise.edih_year'|trans }}</label>
                                <input type="date" id="annee_edih" name="annee_edih" placeholder="jj/mm/aaaa">
                            </div>
                            {% endif %}
                        </div>

                        {% if app.user and 'ROLE_ADMINISTRATEUR' in app.user.roles %}
                        <div class="form-row">
                            <div class="form-group">
                                <label for="annee_edih">{{ 'app.create_entreprise.edih_year'|trans }}</label>
                                <input type="date" id="annee_edih" name="annee_edih" placeholder="jj/mm/aaaa">
                            </div>
                            <div class="form-group"></div>
                        </div>
                        {% endif %}

                        <div class="form-row">
                            <div class="form-group">
                                <label for="type_structure">{{ 'app.create_entreprise.structure_type'|trans }} <span class="required">*</span></label>
                                <input type="text" id="type_structure" name="type_structure" required placeholder="SA, SARL, SAS, Association...">
                            </div>
                            <div class="form-group">
                                <label for="annee_creation">{{ 'app.create_entreprise.creation_year'|trans }} <span class="required">*</span></label>
                                <input type="number" id="annee_creation" name="annee_creation" min="1800" max="2100" required placeholder="2020" pattern="[0-9]{4}" title="L'année doit être un nombre de 4 chiffres">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="secteur">{{ 'app.create_entreprise.activity_sector'|trans }} <span class="required">*</span></label>
                                <input type="text" id="secteur" name="secteur" required>
                            </div>
                            <div class="form-group">
                                <label for="siret">{{ 'app.create_entreprise.siret'|trans }} <span class="required">*</span></label>
                                <input type="text" id="siret" name="siret" required placeholder="12345678900012" pattern="[0-9]{14}" maxlength="14" title="Le SIRET doit contenir exactement 14 chiffres">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="taille">{{ 'app.create_entreprise.company_size'|trans }} <span class="required">*</span></label>
                                <select id="taille" name="taille" required>
                                    <option value="">{{ 'app.create_entreprise.select_size'|trans }}</option>
                                    <option value="Micro">Micro-entreprise (0 {{ 'app.create_entreprise.employees'|trans }})</option>
                                    <option value="TPE">TPE (1-9 {{ 'app.create_entreprise.employees'|trans }})</option>
                                    <option value="PME_Petite">Petite PME (10-49 {{ 'app.create_entreprise.employees'|trans }})</option>
                                    <option value="PME_Moyenne">Moyenne PME (50-249 {{ 'app.create_entreprise.employees'|trans }})</option>
                                    <option value="ETI">ETI (250-4999 {{ 'app.create_entreprise.employees'|trans }})</option>
                                    <option value="GE">Grande Entreprise (5000+ {{ 'app.create_entreprise.employees'|trans }})</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="chiffre_affaires">{{ 'app.create_entreprise.turnover'|trans }}</label>
                                <input type="text" id="chiffre_affaires" name="chiffre_affaires" placeholder="1000000" pattern="[0-9 ]+" title="Le chiffre d'affaires doit contenir uniquement des chiffres">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="codepostal">{{ 'app.create_entreprise.postal_code'|trans }} <span class="required">*</span></label>
                                <input type="text" id="codepostal" name="codepostal" required placeholder="75001" pattern="[0-9]{4,6}" maxlength="6" title="Le code postal doit contenir uniquement des chiffres">
                            </div>
                            <div class="form-group">
                                <label for="ville">{{ 'app.create_entreprise.city'|trans }} <span class="required">*</span></label>
                                <input type="text" id="ville" name="ville" required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="region">{{ 'app.create_entreprise.region'|trans }}</label>
                                <input type="text" id="region" name="region" placeholder="Île-de-France">
                            </div>
