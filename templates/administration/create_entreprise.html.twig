                                <input type="text" id="wp5_formation_price_invoiced" name="wp5_formation_price_invoiced">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="wp5_formation_start_date">{{ 'app.create_entreprise.wp5_start_date'|trans }}</label>
