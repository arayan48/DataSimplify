                                </label>
                            </div>
                            <div class="category-checkbox">
                                <input type="checkbox" id="cat_wp5_formation" name="categories[]" value="wp5_formation" data-create-entreprise-target="categoryCheckbox">
                                <label for="cat_wp5_formation">
                                    <strong>WP5 - {{ 'app.create_entreprise.formation'|trans }}</strong>
                                    <span>{{ 'app.create_entreprise.cat_wp5_formation'|trans }}</span>
                                </label>
                            </div>
                            <div class="category-checkbox">
                                <input type="checkbox" id="cat_wp6" name="categories[]" value="wp6" data-create-entreprise-target="categoryCheckbox">
                                <label for="cat_wp6">
                                    <strong>WP6</strong>
                                    <span>{{ 'app.create_entreprise.cat_wp6'|trans }}</span>
                                </label>
                            </div>
                            <div class="category-checkbox">
                                <input type="checkbox" id="cat_wp7" name="categories[]" value="wp7" data-create-entreprise-target="categoryCheckbox">
                                <label for="cat_wp7">
                                    <strong>WP7</strong>
                                    <span>{{ 'app.create_entreprise.cat_wp7'|trans }}</span>
                                </label>
                            </div>
                            <div class="category-checkbox">
                                <input type="checkbox" id="cat_relation" name="categories[]" value="relation" data-create-entreprise-target="categoryCheckbox">
                                <label for="cat_relation">
                                    <strong>{{ 'app.create_entreprise.relation'|trans }}</strong>
                                    <span>{{ 'app.create_entreprise.cat_relation'|trans }}</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section WP2 -->
            <div class="accordion-item conditional-section" data-category="wp2" data-create-entreprise-target="conditionalSection" style="display: none;">
