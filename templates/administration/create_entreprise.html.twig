                                                <div class="country-item" data-country="Pérou">Pérou</div>
                                                <div class="country-item" data-country="Venezuela">Venezuela</div>
                                            </div>
                                            <div class="country-category">
                                                <div class="country-category-header">Moyen-Orient</div>
                                                <div class="country-item" data-country="Émirats Arabes Unis">Émirats Arabes Unis</div>
                                                <div class="country-item" data-country="Arabie Saoudite">Arabie Saoudite</div>
                                                <div class="country-item" data-country="Qatar">Qatar</div>
                                                <div class="country-item" data-country="Israël">Israël</div>
                                                <div class="country-item" data-country="Turquie">Turquie</div>
                                                <div class="country-item" data-country="Liban">Liban</div>
                                            </div>
                                            <div class="country-category">
                                                <div class="country-category-header">Océanie</div>
                                                <div class="country-item" data-country="Australie">Australie</div>
                                                <div class="country-item" data-country="Nouvelle-Zélande">Nouvelle-Zélande</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group form-row full">
                            <label for="adresse">{{ 'app.create_entreprise.address'|trans }}</label>
                            <input type="text" id="adresse" name="adresse">
                        </div>

                        <div class="form-group form-row full">
                            <label for="description">{{ 'app.create_entreprise.company_description'|trans }}</label>
                            <textarea id="description" name="description"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section 2: Sélection des catégories -->
            <div class="accordion-item">
                <div class="accordion-header">
                    <h3>
                        <i class="fi fi-rs-checkbox"></i>
                        {{ 'app.create_entreprise.section_selection'|trans }}
                    </h3>
                    <span class="accordion-icon">
                        <i class="fi fi-rs-angle-down"></i>
                    </span>
                </div>
                <div class="accordion-content">
                    <div class="accordion-body">
                        <p class="selection-description">{{ 'app.create_entreprise.selection_description'|trans }}</p>
                        <div class="category-selection-grid">
                            <div class="category-checkbox">
                                <input type="checkbox" id="cat_wp2" name="categories[]" value="wp2" data-create-entreprise-target="categoryCheckbox">
                                <label for="cat_wp2">
                                    <strong>WP2</strong>
                                    <span>{{ 'app.create_entreprise.cat_wp2'|trans }}</span>
                                </label>
                            </div>
                            <div class="category-checkbox">
                                <input type="checkbox" id="cat_wp5_event" name="categories[]" value="wp5_event" data-create-entreprise-target="categoryCheckbox">
