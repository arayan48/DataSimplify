<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/logo/Logo CITC_Couleur gris.png') }}">
        {% block stylesheets %}
            <link href="{{ asset('assets/output.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="{{ asset('assets/flowbite.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>

        <header>
            <div class="header-logo">
                <a href="{{ path('app_home') }}">
                    <img src="{{ asset('img/logo/Logo CITC_Couleur gris.png') }}" alt="Logo">
                </a>
                <div class="language-selector">
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'fr'})) }}" class="lang-btn {% if app.request.locale == 'fr' %}active{% endif %}">FR</a>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}" class="lang-btn {% if app.request.locale == 'en' %}active{% endif %}">EN</a>
                </div>
            </div>
            
            <nav>
                <a href="{{ path('app_home') }}">{{ 'app.common.home'|trans }}</a>

                {% if app.user and 'ROLE_ADMINISTRATEUR' in app.user.roles %}
                <div class="dropdown" data-controller="dropdown">
                    <span class="user-info dropdown-toggle no-background" data-action="click->dropdown#toggle" data-dropdown-target="toggle">
                        {{ 'app.header.administrator'|trans }}
                    </span>
                    <div class="dropdown-menu" data-dropdown-target="menu">
                        <a href="{{ path('app_admin_dashboard') }}" class="dropdown-item">{{ 'app.admin.dashboard'|trans }}</a>
                        <a href="{{ path('app_admin_users') }}" class="dropdown-item">{{ 'app.admin.users'|trans }}</a>
                        <a href="{{ path('app_admin_partenaire') }}" class="dropdown-item">{{ 'app.admin.partenaires'|trans }}</a>
                    </div>
                </div>
                {% endif %}
                
                {% if app.user and 'ROLE_ADMINISTRATION' in app.user.roles %}
                <div class="dropdown" data-controller="dropdown">
                    <span class="user-info dropdown-toggle no-background" data-action="click->dropdown#toggle" data-dropdown-target="toggle">
                        {{ 'app.header.administration'|trans }}
                    </span>
                    <div class="dropdown-menu" data-dropdown-target="menu">
                        <a href="{{ path('app_administration_dashboard') }}" class="dropdown-item">{{ 'app.administration.dashboard'|trans }}</a>
                        <a href="{{ path('app_administration_statistics') }}" class="dropdown-item">{{ 'app.administration.statistics'|trans }}</a>
                    </div>
                </div>
                {% endif %}
                
                {% if not app.user %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary">{{ 'app.common.login'|trans }}</a>
                {% else %}
                    <div class="dropdown user-dropdown" data-controller="dropdown">
                        <button class="user-menu-toggle" data-action="click->dropdown#toggle" data-dropdown-target="toggle">
                            <span class="user-avatar">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </span>
                            <span class="user-name">{{ app.user.usernameIdentifier }}</span>
                            <svg class="chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="6 9 12 15 18 9"></polyline>
                            </svg>
                        </button>
                        <div class="dropdown-menu user-menu" data-dropdown-target="menu">
                            <div class="user-menu-header">
                                <div class="user-avatar-large">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg>
                                </div>
                                <div class="user-info-details">
                                    <div class="user-info-name">{{ app.user.usernameIdentifier }}</div>
                                    <div class="user-info-email">{{ app.user.email }}</div>
                                </div>
                            </div>
                            <div class="user-menu-divider"></div>
                            <a href="{{ path('app_profile') }}" class="dropdown-item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                {{ 'app.common.profile'|trans }}
                            </a>
                            <div class="user-menu-divider"></div>
                            <a href="{{ logout_path() }}" class="dropdown-item dropdown-item-logout">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                    <polyline points="16 17 21 12 16 7"></polyline>
                                    <line x1="21" y1="12" x2="9" y2="12"></line>
                                </svg>
                                {{ 'app.common.logout'|trans }}
                            </a>
                        </div>
                    </div>
                {% endif %}
            </nav>
        </header>

        <div id="global-loader" class="loader-overlay" style="display: none;">
            <div class="loader-spinner"></div>
        </div>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer>
            <p>{{ 'app.footer.copyright'|trans }}</p>
        </footer>
    </body>
</html>
