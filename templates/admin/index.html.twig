{% extends 'base.html.twig' %}

{% block title %}Dashboard - CITC{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/sidebar.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/admin/dashboard.css') }}">
    <style>
        body > header,
        body > footer {
            display: none;
        }
        body > main {
            padding: 0;
        }
        .activity-item {
            display: flex;
            align-items: flex-start;
            padding: 12px 0;
            border-bottom: 1px solid #f3f4f6;
        }
        .activity-item:last-child {
            border-bottom: none;
        }
        .activity-icon {
            flex-shrink: 0;
            width: 32px;
            height: 32px;
            background-color: #e0e7ff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
        }
        .activity-icon svg {
            color: #6366f1;
        }
        .activity-content {
            flex: 1;
        }
        .activity-title {
            font-weight: 500;
            color: #111827;
            margin-bottom: 4px;
        }
        .activity-time {
            font-size: 0.875rem;
            color: #6b7280;
        }
    </style>
{% endblock %}

{% block body %}
<div class="dashboard-container" data-controller="dashboard">
    <!-- Sidebar -->
    {% include 'admin/_sidebar.html.twig' %}

    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <div class="topbar">
            <h1>{{ 'app.admin.dashboard'|trans }}</h1>
            <div class="topbar-actions">
                <div class="user-info">
                    <div class="user-avatar">{{ app.user ? app.user.email|first|upper : 'A' }}</div>
                    <span>{{ app.user ? app.user.email : 'Administrateur' }}</span>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-card-header">
                    <span class="stat-card-title">{{ 'app.admin.total_users'|trans }}</span>
                    <span class="stat-card-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </span>
                </div>
                <div class="stat-card-value">{{ totalUsers ?? '-' }}</div>
            </div>

            <div class="stat-card">
                <div class="stat-card-header">
                    <span class="stat-card-title">{{ 'app.admin.active_users'|trans }}</span>
                    <span class="stat-card-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                    </span>
                </div>
                <div class="stat-card-value">{{ activeUsers ?? '-' }}</div>
            </div>

            <div class="stat-card">
                <div class="stat-card-header">
                    <span class="stat-card-title">{{ 'app.admin.total_partenaires'|trans }}</span>
                    <span class="stat-card-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </span>
                </div>
                <div class="stat-card-value">{{ totalPartenaires ?? '0' }}</div>
            </div>

            <div class="stat-card">
                <div class="stat-card-header">
                    <span class="stat-card-title">{{ 'app.admin.conversion_rate'|trans }}</span>
                    <span class="stat-card-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="12" y1="20" x2="12" y2="10"></line>
                            <line x1="18" y1="20" x2="18" y2="4"></line>
                            <line x1="6" y1="20" x2="6" y2="16"></line>
                        </svg>
                    </span>
                </div>
                <div class="stat-card-value">{{ conversionRate ?? '-' }}</div>
            </div>
        </div>

        <!-- Content Grid -->
        <div class="content-grid">
            <!-- Logs Table -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ 'app.admin.logs'|trans }}</h3>
                </div>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>{{ 'Date/Heure'|trans }}</th>
                                <th>{{ 'Utilisateur'|trans }}</th>
                                <th>{{ 'Action'|trans }}</th>
                                <th>{{ 'Statut'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if logs|length > 0 %}
                                {% for log in logs %}
                                <tr>
                                    <td>{{ log.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>{{ log.userEmail ?? 'Système' }}</td>
                                    <td>{{ log.message }}</td>
                                    <td>
                                        {% if log.status == 'success' %}
                                            <span class="badge success">{{ 'Succès'|trans }}</span>
                                        {% elseif log.status == 'error' %}
                                            <span class="badge danger">{{ 'Erreur'|trans }}</span>
                                        {% else %}
                                            <span class="badge warning">{{ 'Avertissement'|trans }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="4" style="text-align: center; color: #6b7280; padding: 20px;">
                                        Aucun log disponible
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Activity Feed -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ 'app.admin.recent_activity'|trans }}</h3>
                </div>
                <ul class="activity-list">
                    {% if logs|length > 0 %}
                        {% for log in logs|slice(0, 10) %}
                        <li class="activity-item">
                            <div class="activity-icon">
                                {% if log.type == 'auth' %}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                                        <polyline points="10 17 15 12 10 7"></polyline>
                                        <line x1="15" y1="12" x2="3" y2="12"></line>
                                    </svg>
                                {% else %}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="8.5" cy="7" r="4"></circle>
                                        <line x1="20" y1="8" x2="20" y2="14"></line>
                                        <line x1="23" y1="11" x2="17" y2="11"></line>
                                    </svg>
                                {% endif %}
                            </div>
                            <div class="activity-content">
                                <div class="activity-title">{{ log.message }}</div>
                                <div class="activity-time">{{ log.userEmail ?? 'Système' }} • {{ log.createdAt|date('H:i') }}</div>
                            </div>
                        </li>
                        {% endfor %}
                    {% else %}
                        <li class="activity-item">
                            <div class="activity-content" style="text-align: center; color: #6b7280; padding: 20px;">
                                {{ 'app.admin.no_recent_activity'|trans }}
                            </div>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </main>
</div>
{% endblock %}
