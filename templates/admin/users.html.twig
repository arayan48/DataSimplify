</div>

<script>
    // Fonctions globales pour gérer les modales
    function openModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal) {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            modal.removeAttribute('inert');
            modal.removeAttribute('aria-hidden');
            // Ajouter backdrop
            const backdrop = document.createElement('div');
            backdrop.className = 'bg-gray-900 bg-opacity-50 fixed inset-0 z-[9998]';
            backdrop.id = 'modal-backdrop-' + modalId;
            backdrop.onclick = () => closeModal(modalId);
            document.body.appendChild(backdrop);
        }
    }
    
    function closeModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal) {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            modal.setAttribute('inert', '');
            modal.setAttribute('aria-hidden', 'true');
            const backdrop = document.getElementById('modal-backdrop-' + modalId);
            if (backdrop) backdrop.remove();
        }
    }

    // Fonction pour afficher la modale de suppression unique
    function showDeleteUserModal(userName, userId) {
        document.getElementById('deleteUserName').textContent = userName;
        window.currentDeleteUserId = userId;
        openModal('deleteUserModal');
    }

    // Fonction pour confirmer la suppression unique
    function confirmDeleteUser() {
        if (window.usersController) {
            closeModal('deleteUserModal');
            window.usersController.executeDelete(window.currentDeleteUserId);
        }
    }

    // Fonction pour afficher la modale de suppression multiple
    function showDeleteMultipleUsersModal(count) {
        document.getElementById('deleteMultipleCount').textContent = count;
        openModal('deleteMultipleUsersModal');
    }

    // Fonction pour confirmer la suppression multiple
    function confirmDeleteMultipleUsers() {
        if (window.usersController) {
            closeModal('deleteMultipleUsersModal');
            window.usersController.executeDeleteMultiple();
        }
    }
</script>

